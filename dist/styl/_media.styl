// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1367px)
	body
		font-size 14px
		
	.alps_title,
	.journey_title
		font-size 130px
		margin-bottom 50px
		
+max-screen(1200px)
	.header_text
		width 700px
		margin-left -350px
		top 25%
	// countries
	.country_descr
		margin-left 320px
		.country_direction
			font-size 25px

+max-screen(1100px)
	// journey
	.journey_wrapper
		padding-bottom 250px
	.alps_title, 
	.journey_title
		font-size 130px
		margin-bottom 40px
		
+max-screen(992px)
	// Header
	.top_line
		padding 18px 20px
		
	.mobile_menu-list 
		.mobile_menu-item 
			a
				font-size 25px
	.mobile_language-list
		.mobile_lang-item
			a
				font-size 20px
	
	.header_text
		top 40%
	.header_ski
		top 55%
	.mobile_logo
		display block
	.menu_show
		display inline-block
		width 18px
		height 18px
		padding-top 30px
		background url(../img/toggle.png) no-repeat center center no-repeat
	.dropdowns_wrapper,
	.top_line-logo,
	.top_line-contacts
		display none
	// parallax
	.header_ski
		width 270px
		margin-left -135px
		
	// search 2
	.search_form-date
		padding-left 10px
			
	// journey
	.journey_wrapper
		text-align right
	.journey_title,
	.alps_title
		font-size 105px
	// country
	.country_descr
		margin-left 330px
		padding 37px 0
		.country_name
			font-size 40px
		.country_direction
			font-size 20px
			.arrow
				margin 0 5px
				height 17px
		.country_price
			margin 0

		
	// footer
	.footer_menu
		.footer_menu--item
			margin-right 40px
			&:last-child
				margin-right 0

+max-screen(850px) 
	// footer
	.footer_menu
		.footer_menu--item
			margin-right 30px
			&:last-child
				margin-right 0
		
+max-screen(770px)
	// header
	.header_text,
	.header_rock,
	.header_cloud,
	.header_ski
		display none
	.header
		background url(../img/header-bg.png) no-repeat center bottom
		background-size cover
	// mobile menu
	.menu_close
		right 0
	// journey
	.journey_wrapper
		padding-bottom 210px
		
	.alps_title,
	.journey_title
		font-size 90px
		margin-bottom 20px
	.alps_title:after, 
	.journey_title:after
		font-size 20px
		
	// countries
	.country
		margin-bottom 30px
	.countries_wrapper
		background-size 100% 30%
		padding 340px 0 100px
	.country_img-wrap
		float none
		padding 0
		.country_img
			width 50%
	
	.country_wrap
		text-align center
		padding 0 40px
	
	.country_descr
		margin-left 0
		padding-left 170px
	// footer
	.footer
		padding 40px 20px
	.footer_nav
		display none
	.mobile_footer-phone
		display inline-block

+max-screen(766px)
	.journey_text
		padding 0 20px 0 220px
	.alps_text
		padding 0 220px 0 20px

+max-screen(720px)
	.search_form
		padding 20px
	.overlay_form
		padding 20px
		
		
+max-screen(630px)

	// search 2
	.search_wrapper
		// left 50%
		// transform translate(-50%, -100%)
	.search_form-to,
	.search_form-from
		float none
		width 100%
	.search_form-from
		padding-top 0
	.hidden_submit
		display none
		
	.search_form-direction,
	.search_form-date
		margin-bottom 30px
	
	.search_form-direction
		padding-left 30px
		.search_input
			margin-bottom 20px
			padding-bottom 0
		.search_form-arrow
			background url(../img/search-arrow-mobile.png) no-repeat
			top 12px
			height 52px
			width 14px
	.overlay_form
		right -100%
	.hide_form
		top 0
	// journey
	.journey_wrapper
		padding-bottom 180px	
		padding-top 60px	
		
	.journey_title-wrap
		padding-left 190px
	.journey_title,
	.alps_title
		font-size 70px
		
	// country
	.countries_wrapper
		background-size 100% 15%
		padding-top 290px
	
	.country_img-wrap
		.country_img
			width 100%
	
	.country_descr
		padding-left 0 !important
		.country_direction
			font-size 25px
	

+max-screen(421px)
	// mobile menu
	.mobile_menu-list 
		.mobile_menu-item 
			a
				font-size 16px
	.mobile_language-list
		.mobile_lang-item
			a
				font-size 16px
			
	// search 2
	input.search_input::-webkit-input-placeholder 
		font-size 16px
	input.search_input::-moz-placeholder          
		font-size 16px
	input.search_input:-moz-placeholder           
		font-size 16px
	input.search_input:-ms-input-placeholder      
		font-size 16px
	
	input.search_input::-webkit-input-placeholder 
		font-size 20px !important
	input.search_input::-moz-placeholder          
		font-size 20px !important
	input.search_input:-moz-placeholder           
		font-size 20px !important
	input.search_input:-ms-input-placeholder      
		font-size 20px !important

	
	// journey
	.journey_wrapper
		padding-bottom 240px
	
	.journey_title-wrap
		padding-left 100px
		text-align left
	.journey_title,
	.alps_title
		font-size 45px
		&:after
			font-size 16px
	
	.journey_text
		padding-left 100px
		.journey_descr
			font-size 14px
			line-height 25px
	
	// alps
	.alps_wrapper
		padding 0
	.alps_title-wrap
		text-align left
	.alps_text
		padding 0 40px 0 20px !important
	.alps_descr
			font-size 14px
			line-height 25px
			
	// country
	.country
		margin-bottom 50px
	.countries_wrapper
		padding-top 230px
	.country_wrap
		padding 0 20px
	.country_descr
		padding 0
	.country_descr
		.country_name
			margin 10px 0
			font-size 20px
		.country_direction
			margin 0 0 10px 0
			font-size 18px
		.country_price
			font-size 18px
	// footer
	.mobile_footer-phone
		font-size 14px

+max-screen(380px)
	// country
	.countries_wrapper
		padding-top 190px
	

