// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/
		
+max-screen(1368px) 
	.header_text
		margin-top -70px
	.header_ski
		margin-top -95px
	
	.journey_wrapper
		margin-top -120px
		
+max-screen(1200px)
	.header_text
		width 700px
		margin-left -350px
		top 25%
	// countries
	.country_descr
		margin-left 320px
		.country_direction
			font-size 25px
	// ~~~~~~~~~~~~~~~~~~~~PAGE~~~~~~~~~~~~~~~~
	.search_wrapper-page 
		.search_form,
		.no-price
			padding 25px 0 25px 15px
+max-screen(1100px)
	// journey
	.journey_wrapper
		padding-bottom 250px
	.alps_title, 
	.journey_title
		font-size 130px
		margin-bottom 40px
		
+max-screen(992px)
	// Header
	.top_line
		padding 20px
		padding-bottom 0
		
	.mobile_menu-list 
		.mobile_menu-item 
			a
				font-size 25px
	.mobile_language-list
		.mobile_lang-item
			a
				font-size 20px
	
	.header_text
		top 40%
	.header_ski
		top 55%
	.mobile_logo
		display block
	.menu_show
		display inline-block
		width 18px
		height 18px
		padding-top 30px
		background url(../img/toggle.png) no-repeat center center no-repeat
	.dropdowns_wrapper,
	.top_line-logo,
	.top_line-contacts
		display none
	// parallax
	.header_ski
		width 270px
		margin-left -135px
		
	// search 2
	.search_form-date
		padding-left 10px
		
	// search form page
	.search_wrapper-page
		.no-price
			padding-left 30px
	// journey
	.journey_wrapper
		text-align right
	.journey_title,
	.alps_title
		font-size 105px
	// country
	.country_descr
		margin-left 330px
		padding 37px 0
		.country_name
			font-size 40px
		.country_direction
			font-size 20px
			.arrow
				margin 0 5px
				height 17px
		.country_price
			margin 0

		
	// footer
	.footer_menu
		.footer_menu--item
			margin-right 40px
			&:last-child
				margin-right 0

+max-screen(850px) 
	// footer
	.footer_menu
		.footer_menu--item
			margin-right 30px
			&:last-child
				margin-right 0
		
+max-screen(770px)
	// header
	header
		display none

	
	// journey
	.journey_wrapper
		margin-top 0
		padding-bottom 210px
		
	.alps_title,
	.journey_title
		font-size 90px
		margin-bottom 20px
	.alps_title:after, 
	.journey_title:after
		font-size 20px
	// search
	.search_wrapper
		background #fff url(../img/header-bg.png) no-repeat center bottom
		padding-top 310px
		background-size cover
		height calc(100vh - 30px)
		position relative
		top 0
	.form_mobile
		position relative
		
	// search form page
	.page_title
		font-size 50px
	.search_wrapper-page
		background none !important
		padding-top 0 !important
		height auto !important
			
	// countries
	.country
		margin-bottom 30px
	.countries_wrapper
		background-size 100% 30%
		padding 340px 0 100px
	.country_img-wrap
		float none
		padding 0
		.country_img
			width 50%
	
	.country_wrap
		text-align center
		padding 0 40px
	
	.country_descr
		margin-left 0
		padding-left 170px
	// footer
	.footer
		padding 40px 20px
	.footer_nav
		display none
	.mobile_footer-phone
		display inline-block
		
	// hidden error form
	.error_form-wrapper
		padding 60px 0
		.error_form-title
			font-size 24px
			margin-bottom 45px
		label
			font-size 14px
			margin-bottom 20px
		.error_input,
		.error_message
			font-size 20px
			
		.error_close
			top 0
			
	.error_inputs-wrap
		margin-bottom 40px
		&:nth-child(3)
			margin-bottom 150px
		
	input.error_input::-webkit-input-placeholder 
		font-size 20px
	input.error_input::-moz-placeholder          
		font-size 20px
	input.error_input:-moz-placeholder           
		font-size 20px
	input.error_input:-ms-input-placeholder      
		font-size 20px
		
	textarea.error_message::-webkit-input-placeholder 
		font-size 20px
	textarea.error_message::-moz-placeholder          
		font-size 20px
	textarea.error_message:-moz-placeholder           
		font-size 20px
	textarea.error_message:-ms-input-placeholder      
		font-size 20px
	

+max-screen(768px) 
	.journey_text
		padding-left 265px
	.alps_text
		padding-right 265px

+max-screen(766px)
	.journey_text
		padding 0 20px 0 220px
	.alps_text
		padding 0 220px 0 20px

+max-screen(720px)
	.search_form
		padding 20px
	.overlay_form
		padding 20px
		
		
+max-screen(630px)
	// search wrapper
	.search_wrapper
		padding-top 0
	.form_mobile
		position absolute !important
		bottom 0 !important
	.search_form-to,
	.search_form-from
		float none
		width 100%
	.search_form-from
		padding-top 0
	.hidden_submit
		display none
	
	.mobile_submit
		display block !important
		
	.search_form-direction,
	.search_form-date
		margin-bottom 30px
	
	.search_form-direction
		padding-left 30px
		.search_input
			margin-bottom 20px
			padding-bottom 0
		.search_form-arrow
			background url(../img/search-arrow-mobile.png) no-repeat
			top 12px
			height 52px
			width 14px
	.overlay_form
		right -100%
	.hide_form
		top 0
		width 15px
		height 15px
		right 20px
		
	// search form page
	.search_wrapper-page
		.search_form-arrow
			background url(../img/search-arrow-page.png) no-repeat
			top 0
	// journey
	.journey_wrapper
		padding-bottom 180px	
		padding-top 60px	
		
	.journey_title-wrap
		padding-left 190px
	.journey_title,
	.alps_title
		font-size 70px
		
	// country
	.countries_wrapper
		background-size 100% 15%
		padding-top 290px
	
	.country_img-wrap
		.country_img
			width 100%
	
	.country_descr
		padding-left 0 !important
		.country_direction
			font-size 25px
	

+max-screen(422px)
	// mobile menu
	.mobile_menu-list 
		.mobile_menu-item 
			a
				font-size 16px
	.mobile_language-list
		.mobile_lang-item
			a
				font-size 16px
			
	// search 2
	.search_form-to
		padding-bottom 1px
	.search_form-title
		margin-bottom 15px
		font-family "FuturaBook", Arial, sans-serif
		font-size 14px

	.overlay_form
		.overlay_title
			font-family "FuturaBook", Arial, sans-serif
			font-size 14px
		
	.search_form-direction
		.search_form-arrow
			top 0
		.search_input
			font-size 14px
			margin-bottom 13px
	input.search_input::-webkit-input-placeholder 
		font-size 16px
	input.search_input::-moz-placeholder          
		font-size 16px
	input.search_input:-moz-placeholder           
		font-size 16px
	input.search_input:-ms-input-placeholder      
		font-size 16px
		
	.search_input-date
		font-size 20px
		height 20px
	input.search_input-date::-webkit-input-placeholder 
		font-size 20px !important
	input.search_input-date::moz-input-placeholder 
		font-size 20px !important
	input.search_input-date:-moz-input-placeholder 
		font-size 20px !important
	input.search_input-date:-ms-input-placeholder 
		font-size 20px !important

	.search_submit
		padding 14px 0
		

	// ~~~~~~~~~~~~~~~PAGE~~~~~~~~~~~~~~~~~
	.top_line-page
		margin-bottom 20px
	.page_title-wrapper
		margin-bottom 25px
	// search form page
	.page_title
		font-size 30px
		
	.personality_form-wrapper 
		.checkbox_label
			margin-bottom 20px !important

	.search_wrapper-page 
		.search_input-date--page
			margin-right 30px
			&:last-child
				width 30px
				margin-right 0
		.search_form
			padding 20px 0 20px 20px 
	// journey
	.journey_wrapper
		padding-bottom 240px
	
	.journey_title-wrap
		padding-left 100px
		text-align left
	.journey_title,
	.alps_title
		font-size 45px
		&:after
			font-size 16px
	
	.journey_text
		padding-left 100px
		.journey_descr
			font-size 14px
			line-height 25px
	
	// alps
	.alps_wrapper
		padding 0
	.alps_title-wrap
		text-align left
	.alps_text
		padding 0 40px 0 20px !important
	.alps_descr
			font-size 14px
			line-height 25px
			
	// country
	.country
		margin-bottom 50px
	.countries_wrapper
		padding-top 230px
	.country_wrap
		padding 0 20px
	.country_descr
		padding 0
	.country_descr
		.country_name
			margin 10px 0
			font-size 20px
		.country_direction
			margin 0 0 10px 0
			font-size 18px
		.country_price
			font-size 18px
	// footer
	.mobile_footer-phone
		font-size 14px

+max-screen(380px)
	// error popup
	.error_wrapper 
		.error_btn
			width 240px
	// country
	.countries_wrapper
		padding-top 190px
		
	// ~~~~~~~~~~~~~PAGE~~~~~~~~~~~~~~
	.request_title
		font-size 20px
	.search_wrapper-page 
		.search_input-date--page
			margin-right 15px
			&:last-child
				margin-right 0
		
+max-screen(321px)
// ~~~~~~~~~~~~~PAGE~~~~~~~~~~~~~~~
	.search_wrapper-page 
		.search_input-date--page
			margin-right 4px
			&:last-child
				margin-right 0
	
	

