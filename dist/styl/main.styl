// File with all variables styles
@import '_vars.styl'
// File with fonts
@import '_fonts.styl'
// File with basic style (body styles, etc)
@import '_basic.styl'
// File with header styles
@import '_header.styl'
// File with form search styles
@import '_search.styl'

// ~~~~~~~~ journey section~~~~~~~~~

// journey
.journey_wrapper
	padding 125px 0 342px 0
	background url(../img/spine-top.png) left top no-repeat
	background-size 100% 100%
.journey_descr
	color $text-color
	line-height 30px
	margin 0
	
// ~~~~~~ The alps section ~~~~~~~~~~

.alps_wrapper
	padding 42px 0 0 0
	position relative

.alps_title,
.journey_title
	margin-top 0
	margin-bottom 70px 
	display inline-block
	position relative
	text-transform uppercase
	color $text-color
	font-size 150px
	font-family 'FuturaHeavy', Arial, sans-serif
	
.alps_title
	&:after
		content 'To explore'
		text-transform none
		position absolute
		top -15px
		left 0
		font-size 30px
		color $text-color
		font-family 'FuturaMedium', Arial, sans-serif
		text-align left
		
.journey_title
	&:after
		content 'Plan your'
		text-transform none
		position absolute
		top -15px
		left 0
		font-size 30px
		color $text-color
		font-family 'FuturaMedium', Arial, sans-serif
		text-align left
	
.alps_descr
	color #000
	line-height 30px

// ~~~~~~ Countries section ~~~~~~
.countries_wrapper
	padding 487px 0 149px 0
	background url(../img/spine-bottom.png) left top no-repeat 
	background-size 100% 50%
	
.country
	margin-bottom 90px
	&:last-child
		margin-bottom 0
.country_img-wrap
	float left
	padding-top 15px
	.country_img
		width 100%
		height auto

.country_descr
	margin-left 390px
	padding 40px 0
	text-align left
	.country_name,
	.country_direction
		font-family "FuturaHeavy", Arial, sans-serif
		color $text-color
	.country_name
		font-size 60px
		margin 0 0 40px 0 
	.country_direction
		font-size 30px
		line-height 30px
		margin 0 0 24px 0 
		.arrow
			display inline-block
			margin 0 18px
			width 68px
			height 23px
			background url(../img/arrow-span.png) no-repeat center center
	.country_price
	
		font-family "FuturaHeavy", Arial, sans-serif
		color $blue-color
		font-size 30px
		
// ~~~~~~~~ search form ~~~~~~~~
.search_wrapper
	background-color transparent
	position relative
	// bottom 50%
	// left 50%
	// margin-left -50%
	// margin-top -50%
	// z-index 6


.search_form
	width 50%
	padding 35px
	background-color $purple-color

.search_form-to
	float left

.search_form-from
	float right
	position relative
	overflow hidden
	
// Form TO
.search_form-title
	font-size 20px
	font-family "FuturaHeavy", Arial, sans-serif
	text-transform uppercase
	color $blue-color
	margin 0 0 35px 0
.search_form-direction
	position relative
	padding-left 40px
	margin-bottom 45px
	.search_form-arrow,
	.search_form-arrow--active
		cursor pointer
		display block
		position absolute
		top 5px
		left 0
		width 22px
		height 98px
		background url(../img/arrow-sprite.png) no-repeat
		
		transition all .25s ease-in-out
	.search_form-arrow
		background-position 0 -98px
	.search_form-arrow--active
		background-position 0 0 !important
	
	.search_input
		width 100%
		margin-bottom 45px
		background-color transparent
		color #fff
		font-size 20px
		padding 0 8px 8px 0
		display block
		border none
		border-bottom 1px solid #aa7bff
		box-shadow none
		outline none
		transition all .25s ease-in-out
		&:focus
			border-bottom 1px solid #fff
		&:last-child
			margin-bottom 0
			
	input.search_input::-webkit-input-placeholder 
		color #aa7bff
		font-size 20px
	input.search_input::-moz-placeholder          
		color #aa7bff
		font-size 20px
	input.search_input:-moz-placeholder           
		color #aa7bff
		font-size 20px
	input.search_input:-ms-input-placeholder      
		color #aa7bff
		font-size 20px

// form date inputs
.search_form-date
	padding-left 40px
	margin-bottom 45px
	
.search_input-date
	display block
	width 100%
	height 37px
	background transparent
	font-size 50px
	color #fff
	transition all .25s ease-in-out
	border none
	box-shadow none
	outline none
	&:focus
		color #aa7bff
	input.search_input-date::-webkit-input-placeholder 
		color #aa7bff
		font-size 50px
	input.search_input-date::-moz-placeholder          
		color #aa7bff
		font-size 50px
	input.search_input-date:-moz-placeholder           
		color #aa7bff
		font-size 50px
	input.search_input-date:-ms-input-placeholder      
		color #aa7bff
		font-size 50px
	
.search_form-label
	display inline-block
	width 28px
	height 28px
	cursor pointer
	
	&.date_label
		background url(../img/icons-sprite.png) no-repeat 0 0
	&.time_label
		background url(../img/icons-sprite.png) no-repeat -32px 0
	&.people_label
		background url(../img/icons-sprite.png) no-repeat -63px 0

// search_submit
.search_submit
	padding 20px 0
	display block
	width 100%
	background transparent
	border 1px solid #fff
	color #fff
	font-family 'FuturaMeidum', Arial, sans-serif
	font-size 16px
	transition all .25s ease-in-out
	cursor pointer
	text-align center
	&:hover
		border-color $blue-color
		background-color $blue-color	
		
// overlay form
.overlay_form
	position absolute
	padding 38px
	height 100%
	width 100%
	background-color $blue-color
	top 0
	right 0
	transition all .25s ease-in-out
	text-align center
	vertical-align middle
	z-index 2
	.overlay_title
		color #fff
		text-align left
		margin 0
		text-transform uppercase
		font-size 20px
	font-family "FuturaHeavy", Arial, sans-serif
	.overlay_plus
		position absolute
		top 50%
		left 50%
		margin-top -60px
		margin-left -60px
		display inline-block
		width 120px
		height 120px
		background url(../img/plus.png) no-repeat
		color #fff
		cursor pointer
		
.hide_form
	z-index 1
	top 33px


@import '_footer.styl'

