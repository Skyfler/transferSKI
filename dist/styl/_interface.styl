// search form to/from
@import '_vars.styl'

// ~~~~~~~~~page title~~~~~~~~~~~~~
.page_title-wrapper
	margin-bottom 40px
	position relative
.page_title
	font-size 60px
	line-height 50px
	font-family "FuturaHeavy", Arial, sans-serif
	margin 0
	color $title-color
	
.page_back
	position absolute
	right 20px
	bottom 0
	color $purple-color
	font-size 16px
	font-family 'FuturaMedium', Arial, sans-serif
	transition all .25s ease-in-out
	&:hover
		text-decoration none
		color $blue-color
		.page_back-arrow
			fill $blue-color
		
.page_back-arrow
	fill $purple-color
	transition all .25s ease-in-out
	width 17px
	height 8px
	


// ~~~~~~~~~mobile menu~~~~~~~~~~
// mobile menu
.mobile_menu
	position fixed
	width 100%
	height 100%
	right -100%
	transition all .25s ease-in-out
	z-index 50
	padding 20px
	background $purple-color
	
.menu_close
	position absolute
	width 30px
	height 30px
	background url(../img/close.png) no-repeat center center
	top 20px
	right 20px
	z-index 60
	color #fff
	transition all .25s ease-in-out
	cursor pointer
	&:hover
		color $blue-color
		text-decoration none
		
.menu_show
	display none

.mobile_title
	font-size 24px
	color #fff
	font-family "FuturaHeavy", Arial, sans-serif
	margin 0 0 52px 0

.mobile_menu-list
	margin-bottom 125px
	.mobile_menu-item
		margin-bottom 30px
		display block
		&:last-child 
			margin-bottom 0
		a
			color #fff
			font-family "FuturaMedium", Arial, sans-serif
			text-decoration none
			transition all .25s ease-in-out
			&:hover
				text-decoration none
				color $blue-color
			
		.mobile_phone
			color #c2a1ff
			margin-left 40px
			
.mobile_language-list
	margin-bottom 40px
	&:last-child
		margin-bottom 0
		
	.mobile_lang-item
		display inline-block
		margin-right 40px
		&:last-child
			margin-right 0
		
		a
			transition all .25s ease-in-out
			color #fff
			font-family "FuturaMedium", Arial, sans-serif
			&:hover
				text-decoration none
				color $blue-color

			&.active 
				color $blue-color

// ~~~~~~~~ search form ~~~~~~~~
.search_wrapper
	background-color transparent
	position relative
	top -200px
	z-index 10


.form_wrapper
	position relative
	form
		position relative
		z-index 1
	
.search_form
	width 50%
	padding 35px
	background-color $purple-color

.search_form-to
	float left
	z-index 1
	position relative

.search_form-from
	padding-bottom 95px
	float right
	position relative
	overflow hidden
	
// Form TO
.search_form-title
	font-size 20px
	font-family "FuturaHeavy", Arial, sans-serif
	text-transform uppercase
	color $blue-color
	margin 0 0 35px 0
.search_form-direction
	position relative
	padding-left 40px
	margin-bottom 45px
	.search_form-arrow
		cursor pointer
		display block
		position absolute
		top 5px
		left 0
		width 22px
		height 98px
		background url(../img/arrow-sprite.png) no-repeat
		background-position 0 -98px
		transition all .25s ease-in-out

	.search_form-arrow--active
		cursor pointer
		display block
		position absolute
		top 5px
		left 0
		width 22px
		height 98px
		background url(../img/arrow-sprite.png) no-repeat
		background-position 0 0
		transition all .25s ease-in-out
	
	.search_input
		z-index 5
		width 100%
		margin-bottom 45px
		background-color transparent
		color #fff
		font-size 20px
		padding 0 8px 8px 0
		display block
		border none
		border-bottom 1px solid #aa7bff
		box-shadow none
		outline none
		transition all .25s ease-in-out
		&:focus
			border-bottom 1px solid #fff
		&:last-child
			margin-bottom 0
	
.mobile_submit
	display none !important
			
input.search_input::-webkit-input-placeholder 
	color #aa7bff
	font-size 20px
input.search_input::-moz-placeholder          
	color #aa7bff
	font-size 20px
input.search_input:-moz-placeholder           
	color #aa7bff
	font-size 20px
input.search_input:-ms-input-placeholder      
	color #aa7bff
	font-size 20px

// form date inputs
.search_form-date
	padding-left 40px
	margin-bottom 45px
	
.search_input-date
	display block
	width 100%
	height 37px
	background transparent
	font-size 50px
	color #fff
	transition all .25s ease-in-out
	border none
	box-shadow none
	outline none
	&:focus
		color #aa7bff
		
input.search_input-date::-webkit-input-placeholder 
	color #aa7bff
	font-size 50px
input.search_input-date::-moz-placeholder          
	color #aa7bff
	font-size 50px
input.search_input-date:-moz-placeholder           
	color #aa7bff
	font-size 50px
input.search_input-date:-ms-input-placeholder      
	color #aa7bff
	font-size 50px
	
.search_form-label
	display inline-block
	width 28px
	height 28px
	cursor pointer
	
	&.date_label
		background url(../img/icons-sprite.png) no-repeat 0 0
	&.time_label
		background url(../img/icons-sprite.png) no-repeat -32px 0
	&.people_label
		background url(../img/icons-sprite.png) no-repeat -63px 0

// search_submit
.search_submit
	padding 20px 0
	display block
	width 100%
	background transparent
	border 1px solid #fff
	color #fff
	font-family 'FuturaMeidum', Arial, sans-serif
	font-size 16px
	transition all .25s ease-in-out
	cursor pointer
	text-align center
	&:hover
		border-color $blue-color
		background-color $blue-color	
		
// overlay form
.overlay_form
	position absolute
	padding 38px
	height 100%
	width 100%
	background-color $blue-color
	top 0
	right 0
	transition all .25s ease-in-out
	text-align center
	vertical-align middle
	z-index 2
	.overlay_title
		color #fff
		text-align left
		margin 0
		text-transform uppercase
		font-size 20px
		font-family "FuturaHeavy", Arial, sans-serif
	.overlay_plus
		position absolute
		top 50%
		left 50%
		margin-top -60px
		margin-left -60px
		display inline-block
		width 120px
		height 120px
		background url(../img/plus.png) no-repeat
		color #fff
		cursor pointer
		
.hide_form
	z-index 1
	top 33px
	cursor pointer
	
// hidden error popup
.error_wrapper
	position absolute
	width 100%
	height 100%
	top 0 
	left 0
	z-index 50
	background-color rgba(255, 255, 255, .5)
	display flex
	flex-direction column 
	justify-content center 
	align-items center
	opacity 0
	z-index -1
	transition all .4s ease-in-out
	
	
	.error_popup
		max-width 670px
		position relative
		width 100%
		background-color $purple-color
		padding 45px 30px
		display table-cell
	
	.hide_form 
		top 10px
		right 10px	
	.error_descr
		font-size 16px
		font-family "FuturaMedium", Arial, sans-serif
		color $error-color
		margin 0 0 45px 0
		
	.error_btn
		width 290px
		display inline-block
		&:hover
			text-decoration none
			color #fff
		




		