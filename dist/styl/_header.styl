// File with all variables styles
@import '_vars.styl'


// ~~~~~~~ Top line header ~~~~~~~

.top_line
	padding 28px 50px
	width 100%
	position fixed
	z-index 20
	text-align center
	

.top_line-lang
	float left
	text-align left

// top line contacts
.top_line-contacts
	float right
	text-align right
	
.top_line-phone,
.top_line-contact-us
	color $text-color
	padding-top 13px
	font-family "FuturaMedium", Arial, sans-serif
	text-decoration none
	border-bottom 7px solid transparent
	transition all .25s ease-in-out
	&:hover
		text-decoration none
		border-bottom 7px solid $blue-color
	
.top_line-phone.hidden_phone
	display none
	
.top_line-contact-us
	padding-left 22px
	background url(../img/contact-us.png) no-repeat left 16px
	margin-left 75px

// logo
.top_line-logo
	opacity 0
	transition all .25s ease-in-out
	font-size 30px
	display inline-block
	text-transform uppercase
	text-decoration none
	font-family "FuturaHeavy", Arial, sans-serif

	&:hover
		text-decoration none
	p
		margin 0
		color $blue-color
		span
			color $purple-color
// Dropdown
.changers
	height 96px
	text-align center
	font-size 0
	display -webkit-box
	display -webkit-flex
	display -ms-flexbox
	display flex
	-webkit-box-orient horizontal
	-webkit-box-direction normal
	-webkit-flex-direction row
	-ms-flex-direction row
	flex-direction row
	text-align center
	-webkit-justify-content space-around
	-ms-flex-pack distribute
	justify-content space-around
	-webkit-box-align center
	-webkit-align-items center
	-ms-flex-align center
	align-items center
	&:after
		display inline-block
		vertical-align middle
		float none
		content ''
		height 100%
		width 0
	& > *
		& + *
			margin-left 15px

.currency__inner
	position relative

.currency-wrapper
	display inline-block
	vertical-align middle
	float none
	cursor pointer
	width 75px
	&.dropdown
		background-position calc(100% - 10px) center
	&.open
		&.dropdown
			background-color #fff
			background-position calc(100% - 10px) center
			

.currency__item
	list-style none

.currency__chosen, .currency__link
	text-transform uppercase
	text-decoration none
	color $text-color
	font-size 16px
	font-family "FuturaMedium", Arial, sans-serif
	display block
	padding 10px 30px 10px 15px
	transition all .25s ease-in-out
	
.currency__chosen
	border 4px solid transparent
	border-bottom non
	transition all .25s ease-in-out

.currency__chosen:hover, .currency__link:hover
	color $blue-color

.open
	.currency__chosen
		border 4px solid $grey-color
		border-bottom none

	.currency__list
		display block
		border 4px solid $grey-color
		border-top none

	.dropdown__inner
		display block

	.currency__chosen
		&:hover
			text-decoration none
			color $blue-color

.currency__list
	display none
	position absolute
	top 100%
	left 0
	width 100%
	background-color #fff

.dropdown
	background-image url(../img/bracket--down.svg)
	background-repeat no-repeat
	background-size 7px
	background-position calc(100% - 27px) center
	&.open
		background-image url(../img/brackert--top.svg)
		background-repeat no-repeat
		background-size 7px
		background-position calc(100% - 27px) center

.dropdown-link
	color #d2d2d2
	line-height 48px
	overflow hidden
	&.chosen
		color #404041

.dropdown__inner
	display none
	width calc(100% + 2px)
	background-color #fff
	position absolute
	top -1px
	left -1px
	z-index 100
	box-shadow 0 4px 7px rgba(54, 59, 72, 0.25), 0 10px 15px rgba(74, 74, 74, 0.2)
	max-height 222px
	overflow auto

.dropdown-list
	background-image url(../img/brackert--top.svg)
	background-repeat no-repeat
	background-size 7px
	background-position calc(100% - 27px) 22px

.dropdown__item
	&:first-child
		border-bottom 1px solid #d2d2d2

.dropdown__content
	padding 13px 15px
	font-size 16px
	color #404041
	line-height normal
	cursor pointer
	text-decoration none
	display block

.dropdown__content--hover
	&:hover
		background-color #f0f0f0

.dropdown__unit
	display inline-block
	vertical-align middle
	float none
	padding 0
	margin-bottom 15px
	& + .dropdown__unit
		margin-left 15px

