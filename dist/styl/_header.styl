// File with all variables styles
@import '_vars.styl'


// ~~~~~~~ Top line header ~~~~~~~

.top_line
	padding 28px 50px
	width 100%
	position fixed
	z-index 20
	text-align center
	

.top_line-lang
	text-align left
	
// top line contacts

.top_line-contacts
	text-align right
	padding 0
	margin 0
	list-style none
	.top_line-contacts--item
		display inline-block
		&:last-child
			margin-left 75px
			a
				padding-left 22px
				background url(../img/contact-us.png) no-repeat left 5px
		a
			color $text-color
			line-height 40px
			font-family "FuturaMedium", Arial, sans-serif
			text-decoration none
			border-bottom 7px solid transparent
			transition all .25s ease-in-out
			&:hover
				text-decoration none
				border-bottom 7px solid $blue-color
	.hidden_phone
		display none

			
// logo
.top_line-logo
	padding-top 5px
	opacity 0
	z-index 10
	transition all .25s ease-in-out
	font-size 30px
	display inline-block
	text-transform uppercase
	text-decoration none
	font-family "FuturaHeavy", Arial, sans-serif

	&:hover
		text-decoration none
	p
		margin 0
		color $blue-color
		span
			color $purple-color


// Header parallax
header
	height 100vh
	position relative
	
.header
	background url(../img/sky.png) no-repeat center center
	background-size cover
	background-position fixed

.header_text
	width 920px
	height 200px
	background url(../img/transfer.svg) no-repeat
	position absolute
	background-size 100%
	top 12%
	left 50%
	margin-left -460px
	z-index 2

.header_rock
	width 100%
	height 100%
	position absolute
	background url(../img/mountain-2.png) no-repeat bottom center 
	background-attachment fixed

	background-size 100%
	z-index 3
	

	background-size 100%
	z-index 3
	

.header_cloud
	position absolute
	width 100%
	height 100%
	background url(../img/clouds.png) no-repeat center center
	z-index 4
	background-size 100%

.header_ski
	width 350px
	height 270px
	background url(../img/ski.svg) no-repeat
	position absolute
	background-size 100%
	top 25%
	left 50%
	z-index 5
	margin-left -175px
	
// mobile 
.mobile_logo
	display none
	color $blue-color
	font-size 24px
	font-family "FuturaHeavy", Arial, sans-serif
	&:hover
		text-decoration none
	span
		color $purple-color
		
// mobile menu
.mobile_menu
	position fixed
	width 100%
	height 100%
	right -100%

	transition all .25s ease-in-out
	z-index 50
	padding 20px
	background $purple-color
	
.menu_close
	position absolute
	width 30px
	height 30px
	top 20px
	right 20px
	z-index 60
	color #fff
	transition all .25s ease-in-out
	&:hover
		color $blue-color
		text-decoration none
		
.menu_show
	display none

.mobile_title
	font-size 24px
	color #fff
	font-family "FuturaHeavy", Arial, sans-serif
	margin 0 0 52px 0

.mobile_menu-list
	margin-bottom 125px
	.mobile_menu-item
		margin-bottom 30px
		display block
		&:last-child 
			margin-bottom 0
		a
			color #fff
			font-family "FuturaMedium", Arial, sans-serif
			text-decoration none
			transition all .25s ease-in-out
			&:hover
				text-decoration none
				color $blue-color
			
		.mobile_phone
			color #c2a1ff
			margin-left 40px
			
.mobile_language-list
	margin-bottom 40px
	&:last-child
		margin-bottom 0
		
	.mobile_lang-item
		display inline-block
		margin-right 40px
		&:last-child
			margin-right 0
		
		a
			transition all .25s ease-in-out
			color #fff
			font-family "FuturaMedium", Arial, sans-serif
			&:hover
				text-decoration none
				color $blue-color

			&.active 
				color $blue-color
				

