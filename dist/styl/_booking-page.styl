@import '_vars.styl'

// Price
.price_wrapper
	width 100%
	height 100%
	background-color $purple-color
	margin-left -30px
	padding 100px 162px 13px 30px
	.transfer_price
		color $blue-color
		font 60px 'FuturaMedium', Arial, sans-serif


// Booking form
.promo-input,
.promo-apply
	display inline-block
	vertical-align middle
	
.promo-input
	position relative
	width 75%
	float left
	margin-right 10px

.promo-apply
	width 22%
	border 1px solid $purple-color
	color $purple-color
	padding 30px 0
	float right
	&:hover
		color #fff
	
.book_form-wrapper
	.personal_data
		margin-bottom 10px
	.personality-text
		margin-bottom  10px
	.accept_terms-label
		margin 0 0 40px 0
	.search_submit-page
		margin-bottom 100px
.promo_wrapper
		position relative
		margin-bottom 55px
		.personality-input
			margin-bottom 0
		.placeholder
			left 40px
			margin-top 0